generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  username      String    @unique
  password      String
  booksBorrowed Borrows[]
}

model Book {
  id         Int       @id @default(autoincrement())
  title      String    @unique
  genre      Genre
  author     String
  publisher  String
  pages      Int
  summary    String
  count      Int
  borrowedBy Borrows[]
}

model Borrows {
  userId     Int
  user       User     @relation(fields: [userId], references: [id])
  bookId     Int
  book       Book     @relation(fields: [bookId], references: [id])
  borrowedOn DateTime @default(now())

  @@id([userId, bookId])
}

enum Genre {
  Fantasy
  Science_Fiction                @map("Science Fiction")
  Dysopian
  Adventure
  Mystery
  Horror
  Thriller
  Historical_Fiction             @map("Historical Fiction")
  Romance
  Comtemporary_Fiction           @map("Comtemporary Fiction")
  Autobiography
  Biography
  Historical
  Food_and_Drink                 @map("Food & Drink")
  Poetry
  Travel
  Art_and_Photography            @map("Art & Photography")
  True_Crime                     @map("True Crime")
  Humanaties_and_Social_Sciences @map("Humanaties & Social Sciences")
  Science_and_Technology         @map("Science & Technology")
}
